{
  "name": "onward-dominicans-backend",
  "version": "1.0.0",
  "description": "Backend API for Onward Dominicans news publication",
  "main": "dist/app.js",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon src/app.ts",
    "build": "tsc && prisma generate",
    "start": "node dist/app.js",
    "postinstall": "prisma generate",
    "prepare:production": "node scripts/prepare-production.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "ts-node src/utils/seed.ts",
    "db:studio": "prisma studio",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "@google/genai": "^1.4.0",
    "@prisma/client": "^6.1.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.14.0",
    "@types/pg": "^8.15.4",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.16.0",
    "prisma": "^6.1.0",
    "react-router-dom": "^7.6.2",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.18.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2"
  },
  "keywords": [
    "news",
    "api",
    "express",
    "typescript",
    "prisma"
  ],
  "author": "Onward Dominicans",
  "license": "MIT"
}
